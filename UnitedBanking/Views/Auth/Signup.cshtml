@{
    ViewData["Title"] = "Signup";
}
<div class="grid-container-signup">
    <div class="signup-text">
        <h1>Signup</h1>
        <h4>Take control of your finances with UnitedBanking!</h4>
        <form asp-action="Register" method="post">
            <fieldset>
                <p>
                    <label for="Username">Username: </label>
                    <input type="text" id="Username" name="Username" class="form-control" />
                </p>

                <p>
                    <label for="Email">Email:</label>
                    <input type="email" id="Email" name="Email" class="form-control" />
                </p>

                <p>
                    <label for="Password">Password:</label>
                    <input type="password" id="Password" name="Password" class="form-control" />
                </p>

                <p>
                    <label for="ConfirmPassword">Confirm Password:</label>
                    <input type="password" id="ConfirmPassword" name="ConfirmPassword" class="form-control" />
                </p>

                <button type="submit" class="btn btn-custom">Register</button>
            </fieldset>

            <hr>

            <p>Already Have an Account? <a asp-controller="Auth" asp-action="Login">Log In</a></p>
        </form>

    </div>

    <img src="/img/bank2.jpg" alt="An image of a bank" class="signup-photo"/>
</div>
