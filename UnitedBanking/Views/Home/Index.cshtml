    @{
    ViewData["Title"] = "Home Page";
}

<div class="grid-container-main">
    
    <div class="mainphoto">
        <div class="mySlides fade">
            <img src="~/img/bankmain.jpg">
            <div class="textbox-main-1">
                <h2>UnitedBanking is Secure</h2>
                <p>Learn how we keep your data safe. We ensure that your data is protected and is never sold</p>
                <button class="btn btn-custom">Learn More</button>
            </div>
        </div>

        <div class="mySlides fade">
            <img src="~/img/bankmain2.png">
            <div class="textbox-main-2">
                <h2>We Ensure Savings</h2>
                <p>Our great rates ensure that you get the results you want from any kind of account that you open</p>
                <button class="btn btn-custom">Save Now</button>
            </div>
        </div>

        <div class="mySlides fade">
            <img src="~/img/bankmain3.png" class="image3main">
            <div class="textbox-main-3">
                <h2>We Can Help</h2>
                <p>Learn ways to finance your house so you can achieve your dream home</p>
                <button class="btn btn-custom">Learn More</button>
            </div>
        </div>

        <!-- Next and previous buttons -->
        <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
        <a class="next" onclick="plusSlides(1)">&#10095;</a>

        <div class="dot-container">
            <span class="dot" onclick="currentSlide(1)"></span>
            <span class="dot" onclick="currentSlide(2)"></span>
            <span class="dot" onclick="currentSlide(3)"></span>
        </div>
    </div>

    <div class="secondrowbar">  
        <a asp-area="" asp-controller="Home" asp-action="Banking" class="herocontainer herocontainer1">
            <h2 class="hero-header">Credit Cards & Financing</h2>
            <i class="fa-solid fa-credit-card hero-icon"></i>
            <p class="hero-body">Get access to our credit cards and great interest rates. We provide different interest rates based on your situation</p>
            <i class="fa-solid fa-arrow-right hero-link"></i>
        </a>

        <a asp-area="" asp-controller="Home" asp-action="Banking" class="herocontainer herocontainer2">
            <h2 class="hero-header">Banking</h2>
            <i class="fa-solid fa-building-columns hero-icon"></i>
            <p class="hero-body">Check out our FDIC backed loans or do your online banking. We also have a secure mobile app that is updated regularly</p>
            <i class="fa-solid fa-arrow-right hero-link"></i>
        </a>

        <a href="#" class="herocontainer herocontainer3">
            <h2 class="hero-header">Customer Service</h2>
            <i class="fa-solid fa-headphones hero-icon  "></i>
            <p class="hero-body">Contact our customer service department or check out our common issues page and how to solve them. We also have a dedicated team devoted to making sure any fraud alerts are caught.</p>
            <i class="fa-solid fa-arrow-right hero-link"></i>
        </a>




    </div>



</div>
    
<script src="/js/site.js"></script>
